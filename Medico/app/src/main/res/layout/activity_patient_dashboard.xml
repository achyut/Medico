<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.uta.controllers.PatientDashboardController">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Patient Dashboard"
            android:id="@+id/textView23"
            android:textSize="30dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:text="Create Appointment"
            android:onClick="createAppointmentGUI"
            android:id="@+id/button4"
            android:textSize="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Appointment"
            android:onClick="showViewAppointmentsGUI"
            android:id="@+id/button5"
            android:layout_weight="0.18"
            android:textSize="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Patient infomation"
            android:onClick="showUpdatePatientInformationGUI"
            android:id="@+id/button6"
            android:layout_weight="0.18"
            android:textSize="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Medical Record"
            android:onClick="showMedicalRecordGUI"
            android:id="@+id/button7"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15"
            android:textSize="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Password"
            android:onClick="showUpdatePasswordGUI"
            android:id="@+id/button8"
            android:layout_weight="0.15"
            android:textSize="16dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:onClick="doLogout"
            android:id="@+id/button14"
            android:layout_weight="0.15"
            android:textSize="16dp" />

    </LinearLayout>
</RelativeLayout>
